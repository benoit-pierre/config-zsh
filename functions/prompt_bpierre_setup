prompt_bpierre_help()
{
  cat <<'EOF'
Not much to configure I'm afraid... Just:

  prompt bpierre

to use it.

EOF
}

prompt_bpierre_setup()
{
  if [[ "$TERM" != "dumb" ]]
  then
    PS1="%b%u%F{white}%~ %(?.%F{green}>.%F{red}!)%f "
  else
    PS1='%~ %(?.>.!) '
  fi
}

prompt_bpierre_setup "$@"

